%:
	dh $@

override_dh_auto_configure:
	./autogen.sh
	dh_auto_configure -- \
		--with-pic \
		--enable-shared=yes \
		--enable-static=yes \
		--with-png=yes \
		--without-bzip2 \
		--without-harfbuzz
